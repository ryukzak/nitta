PWD := $(shell pwd)
IVERILOG := $(shell which iverilog)
RM := $(shell which rm) -f

define test
	$(IVERILOG) -o $(PWD)/$(4).out -I./ -y./ $(PWD)/$(1) $(PWD)/$(2) $(PWD)/$(3)
	$(shell which vvp) $(PWD)/$(4).out
endef

all: pu_accum

clean:
	$(RM) -r $(PWD)/*.vcd $(PWD)/*.out

pu_accum:
	$(call test,pu_accum.v,float_accum.v,pu_accum_tb.v,test_pu_accum_tb)
